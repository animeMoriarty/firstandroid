<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="@string/autorization_title"/>

    <TextView
        android:id="@+id/text_partners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_partners"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageView
        android:id="@+id/imageYandexTaxi"
        android:layout_width="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_partners"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/yandex_taxi"/>

    <TextView
        android:id="@+id/text_yandex_taxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_partners"
        app:layout_constraintStart_toEndOf="@id/imageYandexTaxi"
        android:text="Яндекс Такси"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/imageGetTaxi"
        android:layout_width="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageYandexTaxi"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/gett"/>

    <TextView
        android:id="@+id/text_get_taxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_yandex_taxi"
        app:layout_constraintStart_toEndOf="@id/imageGetTaxi"
        android:text="Get Taxi"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/imageSityMobil"
        android:layout_width="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageGetTaxi"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/sitimobil"/>

    <TextView
        android:id="@+id/text_sity_bomil_taxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_get_taxi"
        app:layout_constraintStart_toEndOf="@id/imageSityMobil"
        android:text="Ситимобил"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/imageTaxiMow"
        android:layout_width="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageSityMobil"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/taxi_mow"/>

    <TextView
        android:id="@+id/text_taxi_mow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_sity_bomil_taxi"
        app:layout_constraintStart_toEndOf="@id/imageTaxiMow"
        android:text="Taxi Mow"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>